{
  "name": "summarizeChapterSkill",
  "description": "Creates chapter summaries for RAG integration",
  "purpose": "Generates concise, searchable summaries of book chapters for use in RAG (Retrieval Augmented Generation) systems",
  "inputs": {
    "chapter_content": {
      "type": "string",
      "description": "Full chapter content",
      "required": true
    },
    "chapter_title": {
      "type": "string",
      "description": "Title of the chapter",
      "required": true
    },
    "chapter_id": {
      "type": "string",
      "description": "Unique identifier for the chapter",
      "required": true
    },
    "target_length": {
      "type": "number",
      "description": "Target length for summary in sentences",
      "default": 10
    },
    "include_key_terms": {
      "type": "boolean",
      "description": "Whether to include key technical terms",
      "default": true
    },
    "locale": {
      "type": "string",
      "enum": ["en", "ur"],
      "description": "Locale of the content",
      "default": "en"
    }
  },
  "outputs": {
    "summary": {
      "type": "string",
      "description": "Generated chapter summary"
    },
    "key_terms": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Key technical terms from the chapter"
    },
    "metadata": {
      "type": "object",
      "description": "Summary metadata including chapter info and tags"
    },
    "success": {
      "type": "boolean",
      "description": "Whether summarization was successful"
    }
  },
  "implementation": {
    "type": "function",
    "handler": "summarizeChapterHandler",
    "dependencies": [
      "natural",
      "openai",
      "transformers"
    ]
  },
  "capabilities": [
    "Concise summarization",
    "Key term extraction",
    "Metadata generation",
    "Multi-language support",
    "Technical content handling"
  ],
  "configuration": {
    "max_summary_length": 500,
    "min_summary_length": 50,
    "language_model": "gpt-3.5-turbo",
    "technical_term_detection": true
  }
}